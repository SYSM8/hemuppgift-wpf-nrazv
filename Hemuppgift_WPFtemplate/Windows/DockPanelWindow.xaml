<Window x:Class="Hemuppgift_WPFtemplate.Windows.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate.Windows"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">

    <DockPanel LastChildFill="True">
        <Button Margin="5" Height="30" Width="80" DockPanel.Dock="Top"  Content="Top" />
        <Button Margin="5" Height="30" Width="80" DockPanel.Dock="Bottom"  Content="Bottom" />
        <Button Margin="5" Height="30" Width="80" DockPanel.Dock="Left"  Content="Left" />
        <Button Margin="5" Height="30" Width="80" DockPanel.Dock="Right"  Content="Right" />

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Margin="5" Height="30" Width="80" x:Name="BtnCenter" 
                Content="Center" 
                Click="Button_Click" />
            <Image x:Name="DockImage" 
                Visibility="Collapsed" 
                Width="300" Height="300" 
                Source="C:\Users\peter\Documents\GitHub\hemuppgift-wpf-nrazv\Hemuppgift_WPFtemplate\TrophyImage.jpg"
               />
        </StackPanel>
    </DockPanel>
</Window>
